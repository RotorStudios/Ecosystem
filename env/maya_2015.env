{
'tool': 'maya', 
'version': '2015',
'platforms': [ 'windows', 'linux', 'darwin' ],
'requires': [ 'base', 'pythonBase' ],

'environment':
    {
    'CHANNEL': 'beta', #should change to stable
    'MAYA_VERSION': '2015',
    'STUDIO_MAYA': '${STUDIO_SW_BASE}/MayaAPPDIR',
    'STUDIO_MAYA_DEPLOY' : '${STUDIO_MAYA}/${MAYA_VERSION}/${CHANNEL}', 
    
    'MAYA_LOCATION': { 'darwin' : '/Applications/Autodesk/maya${MAYA_VERSION}/Maya.app/Contents',
                       'linux'  : '/usr/autodesk/maya${MAYA_VERSION}-x64',
                       'windows': 'C:/Program Files/Autodesk/Maya${MAYA_VERSION}', 
    },
    'PATH': { 'darwin': '${MAYA_LOCATION}/bin',
               'linux': '${MAYA_LOCATION}/bin',
             'windows': '${MAYA_LOCATION}/bin;C:/Program Files/Common Files/Autodesk Shared/;C:/Program Files (x86)/Autodesk/Backburner/', 
    },
    'DYLD_LIBRARY_PATH': { 'darwin': '${MAYA_LOCATION}/MacOS', },
    
    'STUDIO_ICONS': '${STUDIO_MAYA}/icons',
    
    'PYTHONPATH': '${STUDIO_MAYA_DEPLOY}/python',
    
    'MAYA_MODULE_PATH' : '${STUDIO_MAYA}/modules',
    'MAYA_PLUG_IN_PATH': { 'windows': '${STUDIO_MAYA}/modules/${MAYA_VERSION}-windows', },
    'MAYA_PRESETS_PATH'    : '${STUDIO_MAYA}/presets',
    
    'STUDIO_SHELF_PATH': '${STUDIO_MAYA_DEPLOY}/shelves',
    'STUDIO_MAYA_SCRIPT_PATH' : '${STUDIO_MAYA_DEPLOY}/scripts',
        'STUDIO_MAYA_SCRIPT_STARTUP'  : '${STUDIO_MAYA_SCRIPT_PATH}/startup',
        'STUDIO_MAYA_SCRIPT_OVERRIDES': '${STUDIO_MAYA_SCRIPT_PATH}/overrides',
    
    'MI_CUSTOM_SHADER_PATH': { 'windows': '${STUDIO_MAYA}/mentalray/${MAYA_VERSION}-windows/include', },
    },

'optional': { 'beta':
        {
        'CHANNEL': 'beta',
        'STUDIO_MAYA_DEV': '${STUDIO_MAYA_VER}/${CHANNEL}',

        'PYTHONPATH' : '${STUDIO_MAYA_DEV}/python',
        
        'MAYA_MODULE_PATH'     : '${STUDIO_MAYA_DEV}/modules',
        'MAYA_PLUG_IN_PATH'    : { 'windows': '${STUDIO_MAYA_DEV}/modules/${MAYA_VERSION}-windows', },
        'MAYA_PRESETS_PATH'    : '${STUDIO_MAYA_DEV}/presets',
        
        'STUDIO_SHELF_PATH'      : '${STUDIO_MAYA_DEV}/shelves',
        'STUDIO_MAYA_SCRIPT_PATH': '${STUDIO_MAYA_DEV}/scripts',
            'STUDIO_MAYA_SCRIPT_STARTUP'  : '${STUDIO_MAYA_SCRIPT_PATH}/startup',
            'STUDIO_MAYA_SCRIPT_OVERRIDES': '${STUDIO_MAYA_SCRIPT_PATH}/overrides',
        },
    },

'optional': { 'dev-user':
        {
        'CHANNEL': 'dev-user',
        'STUDIO_MAYA_DEV': '${USER_DEV}/maya/${MAYA_VERSION}-dev/dev',
        
        'PYTHONPATH' : '${STUDIO_MAYA_DEV}/python',
        'MAYA_SCRIPT_PATH' : '${STUDIO_MAYA_DEV}/scripts',
        'MAYA_SHELF_PATH'  : '${STUDIO_MAYA_DEV}/shelves',
            'STUDIO_MAYA_SCRIPT_STARTUP'  : '${STUDIO_MAYA_DEV}/startup',
            'STUDIO_MAYA_SCRIPT_OVERRIDES': '${STUDIO_MAYA_DEV}/overrides',
#        'MAYA_MODULE_PATH' : '${STUDIO_MAYA_DEV}/modules',
#        'MAYA_PLUG_IN_PATH': '${STUDIO_MAYA_DEV}/plug-ins',
        },
    },

}
